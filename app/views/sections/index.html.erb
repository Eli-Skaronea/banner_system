<p id="notice"><%= notice %></p>

<h2>Search Sections</h2>
<%= form_tag(search_sections_url, method: "get") do %>
    <%= label_tag(:query, "Search for a section (by number):") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Search") %>
<% end %>

<script>
var QueryURL = "http://localhost:3000/sections/search.json?query=";
var ResultsDiv = "results";
var Field = "number";
var QueryTag = "query";
</script>

<script type="text/javascript" src="/javascripts/AJAXSearch.js"></script>
<br/><div id="results"></div>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Number</th>
      <th>Course</th>
      <th>Room number</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.semester %></td>
        <td><%= section.number %></td>
        <td><%= section.course.name %></td>
        <td><%= section.room_number %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>

<%= link_to 'Log out',   
  destroy_user_session_path,
  method: :delete %>

